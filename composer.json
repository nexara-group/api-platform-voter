{
  "name": "nexara/api-platform-voter",
  "description": "Symfony bundle that enforces voter-based authorization for API Platform 3.",
  "type": "symfony-bundle",
  "license": "MIT",
  "keywords": [
    "symfony",
    "api-platform",
    "security",
    "voter",
    "bundle"
  ],
  "homepage": "https://github.com/nexara-group/api-platform-voter",
  "support": {
    "issues": "https://github.com/nexara-group/api-platform-voter/issues",
    "source": "https://github.com/nexara-group/api-platform-voter"
  },
  "authors": [
    {
      "name": "Nexara s.r.o.",
      "homepage": "https://github.com/nexara-group"
    }
  ],
  "require": {
    "php": "^8.1",
    "symfony/framework-bundle": "^6.4 || ^7.0",
    "symfony/security-bundle": "^6.4 || ^7.0",
    "symfony/cache": "^6.4 || ^7.0",
    "psr/cache": "^3.0",
    "api-platform/core": "^3.0"
  },
  "autoload": {
    "psr-4": {
      "Nexara\\ApiPlatformVoter\\": "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "Nexara\\ApiPlatformVoter\\Tests\\": "tests/"
    }
  },
  "extra": {
    "symfony": {
      "bundle-class": "Nexara\\ApiPlatformVoter\\NexaraApiPlatformVoterBundle"
    }
  },
  "require-dev": {
    "phpunit/phpunit": "^10.5",
    "phpstan/phpstan": "^1.10",
    "phpstan/extension-installer": "^1.3",
    "phpstan/phpstan-symfony": "^1.3",
    "symplify/easy-coding-standard": "^12.3",
    "rector/rector": "^1.2",
    "symfony/maker-bundle": "^1.60",
    "nikic/php-parser": "^5.0"
  },
  "scripts": {
    "test": "phpunit",
    "phpstan": "phpstan analyse --memory-limit=1G",
    "ecs": "ecs check",
    "ecs-fix": "ecs check --fix",
    "rector": "rector process --dry-run",
    "rector-fix": "rector process",
    "qa": [
      "@phpstan",
      "@ecs",
      "@rector",
      "@test"
    ]
  },
  "config": {
    "allow-plugins": {
      "phpstan/extension-installer": true
    }
  }
}
